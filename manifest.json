{
    "manifest_version": 2,
    "name": "swagger-profile",
    "version": "1.0.0",
    "description": "An extension to create and use swagger authorizations keys.",
    "permissions": [
        "contextMenus",
        "activeTab",
        "*://*/swagger/index.html",
        "storage"
    ],
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "content_scripts": [
        {
            "matches": [
                "*://*/swagger/index.html"
            ],
            "js": [
                "index.js"
            ]
        }
    ],
    "options_ui": {
        "page": "options/options.html",
        "browser_style": true
    },
    "browser_action": {
        "default_icon": {
            "32": "icons/popup.png"
        },
        "default_title": "Profile Manager",
        "default_popup": "popup/content-script.html",
        "browser_style": true
    }
}