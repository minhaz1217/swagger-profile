{
    "manifest_version": 2,
    "name": "swagger-profile",
    "version": "1.0.0",
    "description": "An extension to create and use swagger authorizations keys.",
    "permissions": [
        "contextMenus",
        "activeTab",
        "*://*/swagger/index.html",
        "storage"
    ],
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "content_scripts": [
        {
            "matches": [
                "*://*/swagger/index.html"
            ],
            "js": [
                "index.js"
            ]
        }
    ]
}