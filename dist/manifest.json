{
    "manifest_version": 2,
    "name": "swagger-profile",
    "version": "1.0.0",
    "description": "An extension to create and use swagger authorizations tokens.",
    "permissions": [
        "activeTab",
        "*://*/swagger/index.html",
        "storage"
    ],
    "browser_action": {
        "default_icon": {
            "32": "icons/popup.png"
        },
        "default_title": "Profile Manager",
        "default_popup": "popup/index.html",
        "browser_style": true
    }
}