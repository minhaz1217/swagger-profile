{
    "manifest_version": 2,
    "name": "swagger-profile-manager",
    "version": "1.0.0",
    "author": "Minhazul Hayat Khan (https://www.minhazul.com)",
    "developer": {
        "name": "Minhazul Hayat Khan",
        "url": "https://github.com/minhaz1217/swagger-profile"
    },
    "description": "An extension to create and manage swagger authorizations tokens. That applies bearer token on a single click.",
    "permissions": [
        "*://*/swagger/index.html",
        "activeTab",
        "storage"
    ],
    "browser_action": {
        "default_icon": {
            "32": "icons/popup.png"
        },
        "default_title": "Profile Manager",
        "default_popup": "popup/index.html",
        "browser_style": true
    }
}